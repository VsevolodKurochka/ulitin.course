{% import 'macros/macros.base.twig' as macros %}
{% import 'macros/macros.landing.twig' as landing %}
{% extends 'layouts/base.twig' %}

{% set title = 'Title' %}
{% set description = 'description' %}
{% set image = 'img/logo.png' %}
{% set url = 'url' %}

{% block meta %}
{{ macros.meta(title, description, image, url) }}
{% endblock %}

{% block css %}
{{ macros.css(false, "https://fonts.googleapis.com/css?family=Cormorant+SC:700|Ubuntu:300,700&amp;subset=cyrillic")}}
{{ macros.css(true, "css/style.min.css") }}
{% endblock %}

{% block js %}
{{ macros.js("js/scripts.min.js") }}
{% endblock %}

{% block nav %}
{% endblock %}

{% block content %}
{{
  landing.greeting({
    'brand': brand,
    'logo': logo,
    'form': form,
    'video': video,
    'title': title,
    'subtitle': subtitle,
    'name': name,
    'list': list,
    'social': social
  })
}}
{% endblock %}

{% block footer %}
{% endblock %}